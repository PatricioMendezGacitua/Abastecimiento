<mvc:View controllerName="com.gasco.Inbound.controller.Outbound.Detail_Inventario" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<html:style type="text/css">
		div[data-mydata="0"]>div { opacity: 0.3; }
	</html:style>
	<Page title="Inventario" id="oPageTrasladoId">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Transparent" icon="sap-icon://navigation-left-arrow" press="onBackHomeOutbound"></Button>
				</contentLeft>
				<contentMiddle>
					<Text text="INVENTARIOS"></Text>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://vertical-grip" type="Transparent" tooltip="Más Opciones" press="openMoreOption"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<l:Grid hSpacing="1" vSpacing="0.5" width="100%" class="sapUiSmallMarginTop">
				<VBox>
					<Label class="font-smaller" text="Documento Inventario:" required="true" design="Bold" width="100%"></Label>
					<Input id="oInputGuiaDespachoTraspaso" type="Number" width="100%" liveChange="onUpperCase" maxLength="16"></Input>
					<layoutData>
						<l:GridData span="XL12 L12 M12 S12"/>
					</layoutData>
				</VBox>
				<VBox >
					<Label class="font-smaller" design="Bold" text="Fecha Recuento:" required="true" textAlign="Begin" width="100%"></Label>
					<DatePicker id="oDatePickerFInv" width="100%" change="alSeleccionarFechaInv" placeholder="Seleccione..." displayFormat="dd/MM/YYYY"></DatePicker>
					<layoutData>
						<l:GridData span="XL8 L8 M8 S8"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text="Ejercicio:" required="true" design="Bold" width="100%"></Label>
					<DatePicker editable="false" id="oInputPeriodo" width="100%" placeholder="AÑO" displayFormat="yyyy" valueFormat="YYYY"></DatePicker>
					<layoutData>
						<l:GridData span="XL4 L4 M4 S4"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text="Usuario Registro Inventario:" required="true" design="Bold" width="100%"></Label>
					<Input id="oInputUsuarioReg" width="100%" liveChange="onUpperCase" maxLength="16"></Input>
					<layoutData>
						<l:GridData span="XL12 L12 M12 S12"/>
					</layoutData>
				</VBox>
				<Button id="oButtonBuscarId" text="Buscar" type="Emphasized" width="100%" press="onPressBuscarInventario" icon="sap-icon://search"
					iconFirst="true">
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</Button>
				<Button text="Restablecer" type="Ghost" width="100%" press="btnReestablecerInventario">
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</Button>
			</l:Grid>
			<l:Grid id="idGridInventario" visible="false" hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
				<VBox >
					<Label class="font-smaller" design="Bold" text="Centro:" textAlign="Begin" width="100%"></Label>
					<Input id="idCentroInventario" width="100%" enabled="false"></Input>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
				<VBox >
					<Label class="font-smaller" design="Bold" text="Almacen:" textAlign="Begin" width="100%"></Label>
					<Input id="idAmacenInventario" width="100%" enabled="false"></Input>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
			</l:Grid>
			<l:Grid id="idGridPosInventario" visible="false" hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
				<Toolbar>
					<Title class="sapUiTinyMarginBegin" id="oTitleIdLInventario" text="Posiciones (0)" visible="true"></Title>
					<ToolbarSpacer/>
				</Toolbar>
				<List sticky="HeaderToolbar" visible="false" id="idtableLPInventario" selectionChange="openPH" updateFinished="countTitleLPInventario"
					mode="None" items="{oModelInventario>/}">
					<items>
						<CustomListItem type="Inactive">
							<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
								<VBox>
									<Label class="font-xSmaller" text="Material:" textAlign="Center"></Label>
									<Text class="fontBold" width="100%" text="{oModelInventario>Material}" wrapping="true"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Lote:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelInventario>Lote}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Posición:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelInventario>Pos}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Denominación Material:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelInventario>DenMaterial}" textAlign="Center" wrapping="true"></Text>
									<layoutData>
										<l:GridData span="XL12 L12 M12 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Cantidad:" textAlign="Center" required="true" width="100%"></Label>
									<Input class="fontBold" width="100%" textAlign="Center" type="Number"></Input>
									<layoutData>
										<l:GridData span="XL5 L5 M4 S4"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Und. Medida:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelInventario>UM}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Ubicación" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelInventario>Ubicacion}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4"/>
									</layoutData>
								</VBox>
								<!--<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%"></l:Grid>-->
							</l:Grid>
						</CustomListItem>
					</items>
				</List>
			</l:Grid>
			<VBox class="sapUiSmallMarginTop sapUiTinyMarginBottom">
				<HBox class="buttonListo" visible="false" id="oButtonComplete" width="100%" height="40px" justifyContent="Center" alignItems="Center">
					<core:Icon src="sap-icon://message-success" color="#fff" size="1.4rem"></core:Icon>
					<Text class="sapUiTinyMarginBegin fontWhite" text="Listo"></Text>
				</HBox>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Inventariar" press="btnAceptarInventario"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>