<mvc:View controllerName="com.gasco.Inbound.controller.Outbound.Traspasos" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<html:style type="text/css">
		div[data-mydata="0"]>div { opacity: 0.3; }
	</html:style>
	<Page title="Traspasos" id="oPageTraspasoId">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Transparent" icon="sap-icon://navigation-left-arrow" press="onBackHomeOutbound"></Button>
				</contentLeft>
				<contentMiddle>
					<Text text="TRASPASOS"></Text>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://vertical-grip" type="Transparent" tooltip="Más Opciones" press="openMoreOption"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<Toolbar>
				<Title class="sapUiTinyMarginBegin" text="Cabecera Traspaso"></Title>
			</Toolbar>
			<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
			
				<VBox>
					<Label class="font-smaller" text=" Fecha Contabilzación" required="true" design="Bold" width="100%"></Label>
					<DatePicker id="oDatePickerFCTraspaso" width="100%" placeholder="Seleccione..." displayFormat="dd/MM/YYYY"></DatePicker>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text=" Fecha Documento" required="true" design="Bold" width="100%"></Label>
					<DatePicker id="oDatePickerFDTraspaso" width="100%" placeholder="Seleccione..." displayFormat="dd/MM/YYYY"></DatePicker>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text=" Guía Despacho" required="true" design="Bold" width="100%"></Label>
					<Input id="oInputGuiaDespachoTraspaso" width="100%" liveChange="onUpperCase" maxLength="16"></Input>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text="Centro:" textAlign="Center" required="true" design="Bold" width="100%"></Label>
					<VBox justifyContent="Center">
						<Input id="oInputCentroCTraspaso" valueHelpRequest=".openListCentrosCompleta" width="100%" showValueHelp="true"></Input>
						<!--	<Text class="fontBold" width="100%" text="Centro" wrapping="true" textAlign="Center"></Text>-->
					</VBox>
					<layoutData>
						<l:GridData span="XL3 L3 M3 S3"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text="Almacen:" textAlign="Center" required="true" design="Bold" width="100%"></Label>
					<VBox justifyContent="Center">
						<Input id="oInputAlmacenCTraspaso"  valueHelpRequest=".openListAlmacenesCompleta" width="100%" showValueHelp="true"></Input>
					</VBox>
					<layoutData>
						<l:GridData span="XL3 L3 M3 S3"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label class="font-smaller" text=" Observación" design="Bold" required="false"></Label>
					<TextArea id="oTextAreaObservacion" width="100%" maxLength="400" rows="5"></TextArea>
					<layoutData>
						<l:GridData span="XL12 L12 M12 S12"/>
					</layoutData>
				</VBox>
				<!--<Button id="oButtonSiguienteId" text="Siguiente" type="Emphasized" width="100%" press="onPressSiguienteTraspaso" iconFirst="true">
							<layoutData>
								<l:GridData span="XL6 L6 M6 S6"/>
							</layoutData>
						</Button>
						<Button text="Restablecer" type="Ghost" width="100%" press="onPressRestablecer">
							<layoutData>
								<l:GridData span="XL6 L6 M6 S6"/>
							</layoutData>
						</Button>-->
			</l:Grid>
			<Toolbar>
				<Title class="sapUiTinyMarginBegin" id="oTitleIdLPHI" text="Posiciones (0)"></Title>
				<ToolbarSpacer/>
				<Button id="addButton" tooltip="Crear Posiciones" icon="sap-icon://add" type="Transparent" press="onAddPositionTraspaso"/>
			</Toolbar>
			<List sticky="HeaderToolbar" id="idtableLPTraspaso" selectionChange="openPH" updateFinished="countTitleLPTraspaso" mode="None"
				items="{oModelPosTraslado>/}">
				<items>
					<CustomListItem type="Inactive">
						<VBox class="sapUiTinyMargin">
									<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
										<VBox>
											<Label class="font-xSmaller" text="Código Material:"></Label>
											<Text class="fontBold" width="100%" text="{oModelPosTraslado>codMaterial}" wrapping="true"></Text>
											<layoutData>
												<l:GridData span="XL4 L4 M6 S6"/>
											</layoutData>
										</VBox>
									
										<VBox>
											<Label class="font-xSmaller" text="Posición:" width="100%" ></Label>
											<Text class="fontBold" width="100%" text="{oModelPosTraslado>pos}" wrapping="true"  ></Text>
											<layoutData>
												<l:GridData span="XL4 L4 M6 S6"/>
											</layoutData>
										</VBox>
										<VBox>
											<Label class="font-xSmaller" text="Denominación Material:" width="100%"></Label>
											<Text class="fontBold" width="100%" text="{oModelPosTraslado>denMaterial}" wrapping="true" textAlign="Center"></Text>
											<layoutData>
												<l:GridData span="XL12 L12 M12 S12"/>
											</layoutData>
										</VBox>
									</l:Grid>
									<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%">
										<VBox>
											<Label class="font-xSmaller" text="Ubicación:" width="100%"></Label>
										
												<Text class="fontBold" width="100%" text="{oModelPosTraslado>ubicacion}" wrapping="true"></Text>
											
											<layoutData>
												<l:GridData span="XL5 L5 M4 S4"/>
											</layoutData>
										</VBox>
										
									<VBox>
											<Label class="font-xSmaller" text="Almacén:" textAlign="Center" width="100%"></Label>
											
												<Text class="fontBold" width="100%" text="{oModelPosTraslado>almacen}" textAlign="Center" wrapping="true"></Text>
											
											<layoutData>
												<l:GridData span="XL5 L5 M4 S4"/>
											</layoutData>
										</VBox>
										
									
										<VBox>
											<Label class="font-xSmaller" text="Und. Medida:" textAlign="Center" width="100%"></Label>
											<!--<VBox height="44px" justifyContent="Center">-->
												<Text class="fontBold" width="100%" text="{oModelPosTraslado>uni_medida}" textAlign="Center"  wrapping="true"></Text>
											<!--</VBox>-->
											<layoutData>
												<l:GridData span="XL5 L5 M4 S4"/>
											</layoutData>
										</VBox>
										
									</l:Grid>
								
								</VBox>
					</CustomListItem>
				</items>
			</List>
			<VBox class="sapUiSmallMarginTop sapUiTinyMarginBottom">
				<HBox class="buttonListo" visible="false" id="oButtonComplete" width="100%" height="40px" justifyContent="Center" alignItems="Center">
					<core:Icon src="sap-icon://message-success" color="#fff" size="1.4rem"></core:Icon>
					<Text class="sapUiTinyMarginBegin fontWhite" text="Listo"></Text>
				</HBox>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Traspasar" press="btnAceptarTraspaso"/>
				<Button type="Reject" text="Cancelar" press="btnReestablecerTraspaso"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>