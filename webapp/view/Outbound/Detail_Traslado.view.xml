<mvc:View controllerName="com.gasco.Inbound.controller.Outbound.Detail_Traslado" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<html:style type="text/css">
		div[data-mydata="0"]>div { opacity: 0.3; }
	</html:style>
	<Page title="Traspaso" id="oPageTrasladoId">
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Transparent" icon="sap-icon://navigation-left-arrow" press="onBackHomeOutbound"></Button>
				</contentLeft>
				<contentMiddle>
					<Text text="TRASLADO"></Text>
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://vertical-grip" type="Transparent" tooltip="Más Opciones" press="openMoreOption"/>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<Toolbar>
				<!--<Title class="sapUiTinyMarginBegin" text="Cabecera Traspaso"></Title>-->
			</Toolbar>
			<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
				<VBox>
					<Label ></Label>
					<Label class="font-smaller" text=" Número de pedido traslado" design="Bold" width="100%"></Label>
					<Input id="oInputGuiaDespachoTraspaso" type="Number" width="100%" liveChange="onUpperCase" maxLength="16"></Input>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
				<VBox>
					<Label ></Label>
					<Label ></Label>
					<Button id="oButtonBuscarId" text="Buscar" type="Emphasized" width="100%" press="onPressBuscarTrapaso" icon="sap-icon://search"
						iconFirst="true"></Button>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
				<VBox id="vboxDatePicking" visible="false">
					
					<Label class="font-smaller" design="Bold" text="Fecha Picking:" textAlign="Begin" width="100%"></Label>
					<DatePicker id="oDatePickerFPickTitulo"  width="100%"  displayFormat="dd.MM.YYYY"></DatePicker>
					<layoutData>
						<l:GridData span="XL6 L6 M6 S6"/>
					</layoutData>
				</VBox>
			</l:Grid>
			<l:Grid id="idGridTraslado" visible="false" hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
			<Toolbar>
				
				<Title class="sapUiTinyMarginBegin" id="oTitleIdLTraslado" text="Posiciones (0)" visible="false"></Title>
				<ToolbarSpacer/>
			</Toolbar>
			<List sticky="HeaderToolbar" visible="false" id="idtableLPTraslado" selectionChange="openPH" updateFinished="countTitleLPTraslado"
				mode="None" items="{oModelTraspaso>/}">
				<items>
					<CustomListItem type="Inactive">
						<VBox class="sapUiTinyMargin">
							<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%" class="sapUiTinyMarginTop">
								
								<VBox>
									<Label class="font-xSmaller" text="Material:" textAlign="Center"></Label>
									<Text class="fontBold" width="100%" text="{oModelTraspaso>IMatnr}" wrapping="true"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Cant. Entregada:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelTraspaso>Menge}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M3 S3"/>
									</layoutData>
								</VBox>
								
								<VBox>
									<Label class="font-xSmaller" text="Und. Medida:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelTraspaso>Meins}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Posición:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelTraspaso>Ebelp}" wrapping="true" textAlign="Center"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Denominación Material:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelTraspaso>Lgpbe}" textAlign="Center" wrapping="true"></Text>
									<layoutData>
										<l:GridData span="XL12 L12 M12 S12"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Ubicación:" textAlign="Center" width="100%"></Label>
									<Text class="fontBold" width="100%" text="{oModelTraspaso>Ubicacion}" textAlign="Center" wrapping="true"></Text>
									<layoutData>
										<l:GridData span="XL4 L4 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Centro:" textAlign="Center" width="100%"></Label>
								
										<Text class="fontBold" width="100%" text="{oModelTraspaso>IWerks}" textAlign="Center" wrapping="true"></Text>
									
									<layoutData>
										<l:GridData span="XL5 L5 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Almacén:" textAlign="Center" width="100%"></Label>
									
										<Text class="fontBold" width="100%" text="{oModelTraspaso>ILgort}" textAlign="Center" wrapping="true"></Text>
									
									<layoutData>
										<l:GridData span="XL5 L5 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Lote:" textAlign="Center" width="100%"></Label>
									
										<Text class="fontBold" width="100%" text="{oModelTraspaso>Charg}" textAlign="Center" wrapping="true"></Text>
									
									<layoutData>
										<l:GridData span="XL5 L5 M3 S3"/>
									</layoutData>
								</VBox>
								<VBox>
									<Label class="font-xSmaller" text="Cant. Entregada:" textAlign="Center" required="true" width="100%"></Label>
									
										<Input id="cantPickingTraslado" class="fontBold" width="100%"  textAlign="Center" type="Number" ></Input>
									
									<layoutData>
										<l:GridData span="XL5 L5 M6 S6"/>
									</layoutData>
								</VBox>
								
								<VBox visible="false">
									<Label class="font-xSmaller" text="Cant. Picking:" textAlign="Center" width="100%"></Label>
									
										<DatePicker id="oDatePickerFPick" width="100%" value="{oModelTraspaso>Fecha_Picking}" displayFormat="dd.MM.YYYY"></DatePicker>
									
									<layoutData>
										<l:GridData span="XL5 L5 M6 S6"/>
									</layoutData>
								</VBox>
								
							</l:Grid>
							<l:Grid hSpacing="0.5" vSpacing="0.5" width="100%"></l:Grid>
							<customData>
								<core:CustomData key="mydata" value="{oModelPosTraslado>CantidadPen}" writeToDom="true"/>
							</customData>
						</VBox>
					</CustomListItem>
				</items>
			</List>
			</l:Grid>
			<!--<VBox class="sapUiSmallMarginTop sapUiTinyMarginBottom">
				<HBox class="buttonListo" visible="false" id="oButtonComplete" width="100%" height="40px" justifyContent="Center" alignItems="Center">
					<core:Icon src="sap-icon://message-success" color="#fff" size="1.4rem"></core:Icon>
					<Text class="sapUiTinyMarginBegin fontWhite" text="Listo"></Text>
				</HBox>
			</VBox>-->
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="btnAceptarTraslado" type="Accept" text="Trasladar" press="btnAceptarTraslado"/>
				<Button id="btnReestablecerTraslado" type="Reject" text="Reestablecer" press="btnReestablecerTraslado"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>